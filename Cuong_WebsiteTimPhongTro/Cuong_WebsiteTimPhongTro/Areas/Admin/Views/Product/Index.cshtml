@model IEnumerable<Cuong_WebsiteTimPhongTro.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="center-outer">
    <div class="center-inner">

        <div class="bubbles">
            <h1>Phòng trọ</h1>
        </div>

    </div>
</div>
@{ string contentck;}
@*thông báo xóa thành công*@
@if (TempData["check"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["check"]</p>
}


<p class="snip_button2">
    @Html.ActionLink("Đăng tin mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <p>Tên</p>
        </th>
        
        <th>
            <p>Ngày đăng</p>
        </th>
       
        <th>
            <p>Giá thuê</p>
        </th>
        <th>
            <p>Hình ảnh</p>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ProductName)
    </td>
   
    <td>
        @Html.DisplayFor(modelItem => item.DateOfManufacture)
    </td>
   
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        
        <img src="~/Content/Images/@item.Images" width="100px" />
    </td>
    <td>
        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ProductID }) |
        @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID })  |
        @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID })
    </td>
</tr>
    }

</table>
