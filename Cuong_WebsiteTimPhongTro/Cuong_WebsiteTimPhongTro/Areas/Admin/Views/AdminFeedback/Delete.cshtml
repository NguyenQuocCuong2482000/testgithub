@model Cuong_WebsiteTimPhongTro.Models.Feedback

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Xóa thông tin!</h2>

<h3>Bạn đã chắc chắn rằng muốn xóa nó?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>Họ tên</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.CustomerName)
        </dd>

        <dt>
            <p>Nội dung phản hồi</p>
        </dt>

        <dd>
            @Html.Raw(Model.FeedbackCustomer)
        </dd>
        <dt>
            <p>Ngày</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FeedbackDate)
        </dd>



        <dt>
            <p>Email</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            <p>Số điện thoại</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>



        <dt>
            <p>Hình ảnh</p>
        </dt>

        <dd>
            <img src="~/Content/Images/@Model.Images" width="200px" />
        </dd>



    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
